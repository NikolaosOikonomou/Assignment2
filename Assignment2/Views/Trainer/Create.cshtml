@model Assignment2.Models.Trainer
@using Assignment2.Models.Enums

@{
    ViewBag.Title = "Create";
}

<h2>New Trainer</h2>

<form method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName)
        @Html.EditorFor(m => m.FirstName, new { HtmlAttributes = new { @class = "form-control", placeholder = "Firstname" } })
        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
    </div>
   
    <div class="form-group">
        @Html.LabelFor(m => m.LastName)
        @Html.EditorFor(m => m.LastName, new { HtmlAttributes = new { @class = "form-control", placeholder = "Lastname" } })
        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Age)
        @Html.EditorFor(m => m.Age, new { HtmlAttributes = new { @class = "form-control", placeholder = "Age", } })
        @Html.ValidationMessageFor(m => m.Age, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Subject)
        @Html.EnumDropDownListFor(m => m.Subject, "", new { @class = "form-control" })
    </div>

    <input type="submit" value="Create" class="btn btn-success" />
    <a href="/Trainer/Create" class="btn btn-primary">Reset</a>
    @Html.ActionLink("Back", "Index", "", new { @class = "btn btn-primary" })

</form>
<style>
    .form-control {
        text-transform: capitalize;
    }
</style>
